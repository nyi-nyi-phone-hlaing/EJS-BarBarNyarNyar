<%- include("./includes/head.ejs") %>

<h1 class="form-title">Create a new post here.</h1>
<form class="post-form" action="/admin" method="post">
  <div class="field">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" />
  </div>
  <div class="field">
    <label for="photo">Enter Image Url</label>
    <input type="url" name="photo" id="photo" />
  </div>
  <div class="field">
    <label for="description">Description</label>
    <textarea rows="5" name="description" id="description"></textarea>
  </div>
  <button type="submit">Add Post</button>
</form>

