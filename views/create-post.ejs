<%- include("./includes/head.ejs") %>

<div class="row-flex">
  <h1 class="detail-title">Create a new post here.</h1>
  <a class="back-btn" href="/">Back to Home</a>
</div>
<% if(errorMsg) { %>
<p class="err-msg"><%= errorMsg %></p>
<% } %>
<form class="post-form" action="/admin" method="post">
  <input hidden value="<%= csrfToken %>" name="_csrf" />
  <div class="field">
    <label for="title">Title</label>
    <input
      type="text"
      name="title"
      id="title"
      value="<%= oldFormData.title %>"
      required />
  </div>
  <div class="field">
    <label for="photo">Enter Image Url</label>
    <input
      type="url"
      name="photo"
      id="photo"
      value="<%= oldFormData.photo %>"
      required />
  </div>
  <div class="field">
    <label for="description">Description</label>
    <textarea rows="5" name="description" id="description" required>
 <%= oldFormData.description %> </textarea
    >
  </div>
  <button type="submit">Add Post</button>
</form>

<%- include("./includes/foot.ejs") %>
